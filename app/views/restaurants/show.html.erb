<div class="row">
  <div class="col-md-4">
    <%= image_tag @restaurant.image %>
    <p>
      <strong>Name:</strong>
      <%= @restaurant.name %>
    </p>
    <h4>The average rating is <%= @reviews_avg %> </h4>
    <p><%= @reviews.length %> reviews</p>
    <p>
      <strong>Address:</strong>
      <%= @restaurant.address %>
    </p>
    <p>
      <strong>Phone:</strong>
      <%= @restaurant.phone %>
    </p>
    <p>
      <strong>Website:</strong>
      <%= link_to @restaurant.website, @restaurant.website %>
    </p>
    <%= link_to 'Write a Review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %><br>
  </div>

  <div class="col-md-8">
    <% if @reviews.empty? %>
      <h3>No reviews yet. Be the first one to write one!</h3>
    <% else %>
      <table class="table">
        <% @reviews.each do |review| %>
        <tr>
          <td>
            <h1 class="star-color"><%= '*'*review.rating %></h1>
            <p><%= review.comment %></p>
          </td>  
        </tr>
        <% end %>
      </table>
    <% end %>
  </div>
</div>

<%= link_to 'Edit', edit_restaurant_path(@restaurant), class: "btn btn-link" %> |
<%= link_to 'Back', restaurants_path, class: "btn btn-link" %>